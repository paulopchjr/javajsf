			<h3>Navegação Implicita em JSf</h3>
			
			<h:form>
				<h:outputLabel>Nome:</h:outputLabel>
				<h:inputText id="nome" value="#{pessoaBean.nome}"></h:inputText>
				<br/><br/>
				<h:commandButton binding="#{pessoaBean.comHtmlCommandButton}" value="Add Nome" action="#{pessoaBean.addNome}"></h:commandButton>
				<h:dataTable  value="#{pessoaBean.nomes}" var="nome">
					<h:column>
						<h:outputText value="#{nome}"></h:outputText>
					</h:column>
				
				</h:dataTable>
			</h:form>

</h:body>

